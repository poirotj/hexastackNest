# Configuration Kafka pour la communication inter-Bounded Contexts
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=appointment-service
KAFKA_CONSUMER_GROUP_ID=appointment-consumer-group

# Topics Kafka
KAFKA_TOPIC_APPOINTMENT_CREATED=appointment.created
KAFKA_TOPIC_APPOINTMENT_CONFIRMED=appointment.confirmed
KAFKA_TOPIC_APPOINTMENT_CANCELLED=appointment.cancelled
KAFKA_TOPIC_APPOINTMENT_COMPLETED=appointment.completed

# Topics pour les événements externes
KAFKA_TOPIC_PATIENT_REGISTERED=patient.registered
KAFKA_TOPIC_DOCTOR_AVAILABLE=doctor.available
KAFKA_TOPIC_CALENDAR_SLOT_FREED=calendar.slot.freed
